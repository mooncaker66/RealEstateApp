@model HomeViewModel
@{
    ViewData["Title"] = "Home Page";
}

<html>
<head>

    <!-- Basic Page Needs
    ================================================== -->
    <title>Delta</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <!-- CSS
    ================================================== -->
    <link rel="stylesheet" href="~/css/style.css">
    <link rel="stylesheet" href="~/css/color.css">
    <script src="https://kit.fontawesome.com/f2662012a5.js" crossorigin="anonymous"></script>

</head>

<body>

    <!-- Wrapper -->
    <div id="wrapper">
        <!-- Banner
        ================================================== -->
        <div>

            <div class="container">
                <div class="row parallax" data-background="img/background.jpg" data-color="#36383e" data-color-opacity="0.5" data-img-width="2500" data-img-height="1600">
                    <div class="col-md-12">

                        <div class="search-container">

                            <!-- Form -->
                            <h2>Find New Home</h2>

                            <!-- Row With Forms -->
                            <div class="row with-forms">
                                <form asp-action="Search">
                                    <!-- Property Type -->
                                    <div class="col-md-3">

                                        <select asp-for="HousingType" data-placeholder="Any Type" class="chosen-select-no-single">
                                            <option>Any</option>
                                            <option value="1">Apartments</option>
                                            <option value="2">Houses</option>
                                            <option value="3">Commercial</option>
                                            <option value="4">Garages</option>
                                            <option value="5">Lots</option>
                                        </select>
                                    </div>

                                    <!-- Status -->
                                    <div class="col-md-3">
                                        <select asp-for="ListingType" data-placeholder="Any Status" class="chosen-select-no-single">
                                            <option >Any</option>
                                            <option value="1">For Sale</option>
                                            <option value="2">For Rent</option>
                                        </select>
                                    </div>

                                    <!-- Main Search Input -->
                                    <div class="col-md-6">
                                        <div class="main-search-input">
                                            <input asp-for="Address" type="text" placeholder="Enter address e.g. street, city or state" value="" />
                                            <input type="submit" class="button fa fa-search" />
                                        </div>
                                    </div>
                                </form>
                                @*<div class="row">
                                    <div class="col-md-6">
                                        <div id="map" style="height:400px; width:400px;"></div>
                                        <script>
                                            let map;

                                            function initMap() {
                                                map = new google.maps.Map(document.getElementById("map"), {
                                                    /**/
                                                    center: { lat: @ViewBag.lat, lng: @ViewBag.lng},
                                            /**/
                                            zoom: 8,
                                        });
                                    }
                                        </script>
                                        <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAl2L2Ye4W4DaftxwYg3VrBCHR61trmhUw&callback=initMap&libraries=&v=weekly"
                                                async></script>
                                    </div>


                                </div>*@

                            </div>
                            <!-- Row With Forms / End -->
                            <!-- Browse Jobs -->
                            <div class="adv-search-btn">
                                Need more search options? @Html.ActionLink("Advanced Search", "ShowMap", "Home", null)
                            </div>

                            <!-- Announce -->
                            @*<div class="announce">

                                @foreach (var listing in Model.SearchResults)
                                {
                                    <div>@listing.House.Street,@listing.House.State,@listing.House.ZipCode</div>
                                }
                            </div>*@

                        </div>

                    </div>
                </div>
            </div>

        </div>


        <!-- Content
        ================================================== -->
        <!-- Fullwidth Section -->
        <section class="fullwidth border-bottom margin-top-0 margin-bottom-0 padding-top-50 padding-bottom-50" data-background-color="#ffffff">

            <!-- Content -->
            <div class="container">
                <div class="row">

                    <div class="col-md-4">
                        <!-- Icon Box -->
                        <div class="icon-box-1 alternative">

                            <div class="icon-container">
                                <i class="im im-icon-Checked-User"></i>
                            </div>

                            <h3>Buy a home</h3>
                            <p> With over 1 million+ homes for sale available on the website, Trulia can match you with a house you will want to call home.</p>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <!-- Icon Box -->
                        <div class="icon-box-1 alternative">

                            <div class="icon-container">
                                <i class="im im-icon-Cloud-Computer"></i>
                            </div>

                            <h3>Rent a homeh</h3>
                            <p>with 15+ filters and custom keyword search, Delta can help you easily find a home or apartment for rent that you'll love.</p>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <!-- Icon Box -->
                        <div class="icon-box-1 alternative">

                            <div class="icon-container">
                                <i class="im im-icon-Idea"></i>
                            </div>

                            <h3>See neighborhoods</h3>
                            <p>With more neighborhood insights than any other real eatate website, we've captured the door and diversity of communities. </p>
                        </div>
                    </div>

                </div>
            </div>

        </section>
        <!-- Fullwidth Section / End -->
        <!-- Featured -->
        <div class="container">
            <div class="row">

                <div class="col-md-12">
                    <h3 class="headline margin-bottom-25 margin-top-65">Featured</h3>
                </div>

                <!-- Carousel -->
                <div class="col-md-12">
                    <div class="carousel">

                        <!-- Listing Item -->
                        @foreach (var listing in Model.ListingViewModels)
                        {


                            <div class="carousel-item">
                                <div class="listing-item compact">

                                    <a href="@Url.Action("ShowDetails", "Home", new { id = listing.ID})" class="listing-img-container">
                                        <div class="listing-badges">
                                            <span class="featured">Featured</span>
                                            <span>For Sale</span>
                                        </div>

                                        <div class="listing-img-content">
                                            <span class="listing-compact-title">@listing.House.Community <i>@listing.Price</i></span>

                                            <ul class="listing-hidden-content">
                                                <li>Area <span>@listing.House.SquareFeet</span></li>
                                                <li>Rooms <span>@listing.House.Rooms</span></li>
                                                <li>Beds <span>@listing.House.Beds</span></li>
                                                <li>Baths <span>@listing.House.Baths</span></li>
                                            </ul>
                                        </div>

                                        <img src='@listing.ImageSrcs[0]' alt="">
                                    </a>

                                </div>
                            </div>
                        }
                        <!-- Listing Item / End -->
                        <!-- Listing Item -->
                        
                        <!-- Listing Item / End -->
                        <!-- Listing Item -->
                        
                        </div>
                        <!-- Listing Item / End -->

                    </div>
                </div>
                <!-- Carousel / End -->

            </div>
        
        <!-- Featured / End -->
        <!-- Fullwidth Section -->
        <section class="fullwidth margin-top-105 margin-bottom-0 padding-bottom-80 padding-top-95" data-background-color="#f7f7f7">

            <!-- Box Headline -->
            <h3 class="headline-box">See how Delta can help</h3>


        </section>
        <!-- Fullwidth Section / End -->
        <!-- Parallax -->
        <div class="parallax margin-bottom-70"
             data-background="images/listings-parallax.jpg"
             data-color="#36383e"
             data-color-opacity="0.7"
             data-img-width="800"
             data-img-height="505">

            <!-- Infobox -->
            <div class="text-content white-font">
                <div class="container">

                    <div class="row">
                        <div class="col-lg-6 col-sm-8">
                            <h2>It's your journey. We're here to help.</h2>
                            <p>We’re full-service, local agents who know how to find people and home each together. We use online tools with an unmatched search capability to make you smarter and faster.</p>
                            <a href="listings-list-with-sidebar.html" class="button margin-top-25">Get Started</a>
                        </div>
                    </div>

                </div>
            </div>

            <!-- Infobox / End -->

        </div>
        <!-- Parallax / End -->
        <!-- Fullwidth Section -->
        
        <!-- Fullwidth Section / End -->
        <!-- Flip banner -->
        <a href="listings-half-map-grid-standard.html" class="flip-banner parallax" data-background="images/flip-banner-bg.jpg" data-color="#274abb" data-color-opacity="0.9" data-img-width="2500" data-img-height="1600">
            <div class="flip-banner-content">
                <h2 class="flip-visible">We help people and homes find each other</h2>
                <h2 class="flip-hidden">Browse Properties <i class="sl sl-icon-arrow-right"></i></h2>
            </div>
        </a>
        <!-- Flip banner / End -->
        <!-- Footer
        ================================================== -->
        <div id="footer">
            <!-- Main -->
            <div class="container">
                <div class="row">
                    <div class="col-md-5 col-sm-6">
                        <i class="fas fa-home"></i>
                        <br><br>
                            <p>Everything you need to know when you're looking to buy, rent, or sell - all in one place.</p>
                    </div>

                    <div class="col-md-4 col-sm-6 ">
                        <h4>Helpful Links</h4>
                        <ul class="footer-links">
                            <li>@Html.ActionLink("Home", "Index", "Home", null)</li>
                            <li>@Html.ActionLink("Sign up", "Register", "Account", null)</li>
                            <li>@Html.ActionLink("Log in", "Login", "Account", null)</li>
                            <li>@Html.ActionLink("Submit Property", "SubmitProperty", "Home", null)</li>
                        </ul>

                        <ul class="footer-links">
                            <li>@Html.ActionLink("Agent SignUp", "SignUp", "Home", null)</li>
                            <li>@Html.ActionLink("Our Agents", "AgentLists", "Home", null)</li>

                        </ul>
                        <div class="clearfix"></div>
                    </div>

                    <div class="col-md-3  col-sm-12">
                        <h4>Contact Us</h4>
                        <div class="text-widget">
                            <span>45 Park Avenue, Tampa</span> <br>
                            Phone: <span>(123) 123-456 </span><br>
                            E-Mail:<span>office@example.com</span><br>
                        </div>

                        <ul class="social-icons margin-top-20">
                            <li><a class="facebook" href=""><i class="icon-facebook"></i></a></li>
                            <li><a class="twitter" href="#"><i class="icon-twitter"></i></a></li>
                            <li><a class="gplus" href="#"><i class="icon-gplus"></i></a></li>
                            <li><a class="vimeo" href="#"><i class="icon-vimeo"></i></a></li>
                        </ul>

                    </div>

                </div>

                <!-- Copyright -->
                <div class="row">
                    <div class="col-md-12">
                        <div class="copyrights">© All Rights Reserved.</div>
                    </div>
                </div>

            </div>

        </div>
        <!-- Footer / End -->
        <!-- Back To Top Button -->
        <div id="backtotop"><a href="#"></a></div>


        <!-- Scripts
        ================================================== -->
        <script type="text/javascript" src="~/scripts/jquery-3.5.1.min.js"></script>
        <script type="text/javascript" src="~/scripts/jquery-migrate-3.3.1.min.js"></script>
        <script type="text/javascript" src="~/scripts/chosen.min.js"></script>
        <script type="text/javascript" src="~/scripts/magnific-popup.min.js"></script>
        <script type="text/javascript" src="~/scripts/owl.carousel.min.js"></script>
        <script type="text/javascript" src="~/scripts/rangeSlider.js"></script>
        <script type="text/javascript" src="~/scripts/sticky-kit.min.js"></script>
        <script type="text/javascript" src="~/scripts/slick.min.js"></script>
        <script type="text/javascript" src="~/scripts/mmenu.min.js"></script>
        <script type="text/javascript" src="~/scripts/tooltips.min.js"></script>
        <script type="text/javascript" src="~/scripts/masonry.min.js"></script>
        <script type="text/javascript" src="~/scripts/custom.js"></script>







    </div>
    <!-- Wrapper / End -->


</body>
</html>
